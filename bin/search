#!/usr/bin/env bash

# Quick search in a directory for a string ($1).
# -----------------------------------------------------------------------------
if [[ -x "$(which pt 2>/dev/null)" ]]; then
	pt "$1" .
elif [[ -x "$(which ack-grep 2>/dev/null)" ]]; then
	ack-grep "$1" .
else
	grep -rnI --exclude-dir=dir --color=always "$1" .
fi
