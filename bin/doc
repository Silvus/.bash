#!/usr/bin/env bash

usage() {
cat << EOF
$0 [OPTIONS]

Commit/update and open doc folder with ranger or vim.

OPTIONS:
    -h       Show this message
    -g       Do not update/commit
    -v       Open with vim
EOF
}

# Variables - Default values
# ------------------------------------------------------------
# Open with ranger
DOC_OPEN_WITH="ranger"

# Update/Commit by default
DOC_AUTOCOMMIT=1

# Go to docs folder if exist
# ------------------------------------------------------------
_doc_goto_folder() {
    if [[ -d "$DOCUMENTATION_HOME" ]]; then
        cd "$DOCUMENTATION_HOME"
    else
        echo "$DOCUMENTATION_HOME is not a folder"
        exit 0
    fi
}

# Update and commit
# ------------------------------------------------------------
_doc_autocommit() {
    if [[ "$DOC_AUTOCOMMIT" -eq 1 ]]; then
        git pull origin master
        git add .
        git commit -m "Autocommit $(date +'%d/%m/%Y %T')"
    fi
}

# Open doc folder
# ------------------------------------------------------------
_doc_open_folder() {
    # Open with vi
    if [[ "$DOC_OPEN_WITH" == "vim" ]]; then
        vim

    # Check if ranger is installed
    elif [[ -x "/usr/bin/ranger" ]]; then
        ranger

    # No Ranger ? Try vim...
    else
        echo "Ranger is not installed"
        vim
    fi
}

# Parse arguments
# ------------------------------------------------------------
while getopts hvg OPTIONS; do
    case "$OPTIONS" in
        h)
            usage
            exit 0 ;;
        v)
            DOC_OPEN_WITH="vim" ;;
        g)
            DOC_AUTOCOMMIT=0 ;;
    esac
done

# Main
# ------------------------------------------------------------
_doc_goto_folder
_doc_autocommit
_doc_open_folder
