#!/usr/bin/env bash

# Open doc folder with ranger
# -----------------------------------------------------------------------------

# Check if ranger is installed
if [[ ! -x /usr/bin/ranger ]]; then
	echo "Ranger is not installed"
	exit 0
fi

# Check if $DOCUMENTATION_HOME exist
if [[ -d "$DOCUMENTATION_HOME" ]]; then
	ranger $DOCUMENTATION_HOME
else
	echo "$DOCUMENTATION_HOME is not a folder"
	exit 0
fi

