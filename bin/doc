#!/usr/bin/env bash

# If run under Tmux, set title
if [[ -n "$TMUX" ]]; then
	tmux rename-window "Doc"
fi

# Go to doc folder
if [[ -d "$DOCUMENTATION_HOME" ]]; then
	cd "$DOCUMENTATION_HOME"
else
	echo "$DOCUMENTATION_HOME is not a folder"
	exit 1
fi

# Update
git pull origin master

# Open vim explorer
vim -c "Explore"

# Autocommit
git add .
git commit -m "Autocommit Doc $(date +'%d/%m/%Y %T')"

# If run under Tmux, unset title
if [[ -n "$TMUX" ]]; then
	tmux set-window-option -q automatic-rename
fi

exit 0
