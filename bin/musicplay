#!/usr/bin/env bash

# Bind to "media play/pause" (XF86AudioPlay)

if pgrep "mpv" >/dev/null 2>&1 ; then
	# Mpv
	echo "cycle pause" | socat - "/tmp/mpv-socket"

elif pgrep "mocp" >/dev/null 2>&1 ; then
	# Moc
	${HOME}/.dotfiles/bin/music --toggle-pause
else
	#Â Start sport playlist
	/data/doc/.bin/sport
fi

exit 0
