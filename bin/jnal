#!/usr/bin/env bash

# If run under Tmux, set title
if [[ -n "$TMUX" ]]; then
	tmux rename-window "Jnal"
fi

# Go to doc folder
if [[ -d "$SILVUSDOC" ]]; then
	cd "$SILVUSDOC"
else
	echo "$SILVUSDOC is not a folder"
	exit 1
fi

# Update
git pull origin master

# Open jrnl
jrnl "$@"

# Autocommit
git add .
git commit -m "[jnal] Autocommit $(date +'%d/%m/%Y %T')"

# If run under Tmux, unset title
if [[ -n "$TMUX" ]]; then
	tmux set-window-option -q automatic-rename
fi

exit 0
