#!/usr/bin/env bash

rss_url="${DOCUMENTATION_HOME}/.data/rss/urls"
rss_cache="/data/tools/rss/cache.db"

# If run under Tmux, set title
if [[ -n "$TMUX" ]]; then
	tmux rename-window "rss"
fi

newsbeuter -q -u "${rss_url}" -c "${rss_cache}"

# If run under Tmux, unset title
if [[ -n "$TMUX" ]]; then
	tmux set-window-option -q automatic-rename
fi

exit 0
