#!/usr/bin/env bash

action="$(echo -e "Shutdown\nRestart\nLogout" | dmenu -i)"

case "$action" in
	"Shutdown")
		# dbus-send --system --print-reply --dest=\"org.freedesktop.ConsoleKit\" /org/freedesktop/ConsoleKit/Manager \
		#	org.freedesktop.ConsoleKit.Manager.Stop

		# 14.04
		dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 \
				"org.freedesktop.login1.Manager.PowerOff" boolean:true
		;;
	"Restart")
		# dbus-send --system --print-reply --dest=\"org.freedesktop.ConsoleKit\" /org/freedesktop/ConsoleKit/Manager \
        #	org.freedesktop.ConsoleKit.Manager.Restart

		# 14.04
		dbus-send --system --print-reply --dest=org.freedesktop.login1 /org/freedesktop/login1 \
			"org.freedesktop.login1.Manager.Reboot" boolean:true
		;;
	"Logout")
		i3-msg exit
		;;
esac

exit 0
