#!/usr/bin/env bash

action="$(echo -e "Shutdown\nRestart\nLogout" | dmenu -i)"

case "$action" in
	"Shutdown")
		systemctl poweroff
		;;
	"Restart")
		systemctl reboot
		;;
	"Logout")
		session=$(loginctl session-status | head -n 1 | awk '{print $1}')
		loginctl terminate-session $session
		;;
esac

exit 0
