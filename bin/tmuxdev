#!/usr/bin/env bash

# Launch tmux
# -----------------------------------------------------------------------------
_launch_tmux() {
	local _TMUX_SESSION_NAME="${USER}_dev"
	local _BIG_SCREEN_WIDTH=200
	local _SCREEN_WIDTH=$(tput cols)
	local _SPLIT_WIDTH=35
	local _WINDOWS_DEV='Dev'
	local _WINDOWS_SYSOPS='SysOps'

	# make sure tmux server is running
	tmux start-server

	# Determine if session is running
	tmux has-session -t "${_TMUX_SESSION_NAME}"
	if [[ "$?" != 0 ]]; then

		#  Launch session
		tmux -2 new-session -s "${_TMUX_SESSION_NAME}" -d -n "$_WINDOWS_DEV"

		# First window
		# --------------------------

		# Select panel 1
		tmux select-pane -t 1

		# Second window
		# --------------------------

		# Setup a window
		tmux new-window -t "${_TMUX_SESSION_NAME}" -n "$_WINDOWS_SYSOPS"

		# If more than 200 cols in terminal : it's a big screen
		if [[ "$_SCREEN_WIDTH" -gt "$_BIG_SCREEN_WIDTH" ]]; then
			# Split verticaly
			tmux split-window -h -p "$_SPLIT_WIDTH"
			# Go to dotfiles folder and update
			tmux send-keys -t 2 'dot' Enter
			tmux send-keys -t 2 'dotfiles' Enter

			# Select panel 1
			tmux select-pane -t 1
		fi

		# Source env script
		# --------------------------
		if [[ -f "${DOTFILES_PATH}/tmux/tmuxdev_env" ]]; then
			source "${DOTFILES_PATH}/tmux/tmuxdev_env"
		fi

		# Setup a Postgres window
		# tmux new-window -t ${_TMUX_SESSION_NAME} -n 'Postgres' 'psql -U postgres'

		# Focus on first window
		tmux select-window -t "$_WINDOWS_DEV"

		# Change folder
		# tmux send-keys -t 1 'cd $PROJECT_HOME' Enter
	fi

	# Attach to session
	tmux -2 attach -t "${_TMUX_SESSION_NAME}"
}

# Check if tmux is installed
if [[ -x "$(which tmux 2>/dev/null)" ]]; then
	_launch_tmux
else
	echo "Tmux is not installed"
	exit 1
fi
