#!/usr/bin/env python3


def main():
    while True:
        try:
            price = float(input("Price (€): "))
            quantity = float(input("Quantity (ml): "))
        except ValueError:
            print("Need a number")
            continue

        if price > 0 and quantity > 0:
            break
        else:
            print("Need a positive number")

    price_ml = price * 10 / quantity

    print("Price for 10 ml: {0:.2f}€".format(price_ml))


if __name__ == "__main__":
    main()
