#!/usr/bin/env bash

addressbook="/data/doc/.data/contact/addressbook"

# If run under Tmux, set title
if [[ -n "$TMUX" ]]; then
	tmux rename-window "contacts"
fi

abook --datafile "${addressbook}"

# If run under Tmux, unset title
if [[ -n "$TMUX" ]]; then
	tmux set-window-option -q automatic-rename
fi


exit 0
