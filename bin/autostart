#!/usr/bin/env bash

nm-applet &
guake -r tmux -e tmuxdev &
redshift-gtk &
dropbox start &

feh --bg-fill --randomize ~/.dotfiles/wallpaper/* --bg-fill --randomize ~/.dotfiles/wallpaper/* &

# Environment specific configuration
# ------------------------------------------------------
if [[ $(hostname --short) == "mars" ]]; then
	firefox &
	thunderbird &
fi
