#!/usr/bin/env bash

nm-applet &
clipit &
guake -r tmux -e tmuxdev &
redshift-gtk &
firefox &
thunderbird &
dropbox start &

if [[ $(xrandr -q | grep ' connected' | wc -l) -gt 1 ]]; then
	feh --bg-fill --no-xinerama --randomize ~/.dotfiles/wallpaper/2/* &
else
	feh --bg-max --randomize ~/.dotfiles/wallpaper/1/* &
fi
