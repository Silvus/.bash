#!/usr/bin/env bash

nm-applet &
guake -r tmux -e tmuxdev &
redshift-gtk &
firefox &
thunderbird &
dropbox start &

if [[ $(xrandr -q | grep ' connected' | wc -l) -gt 1 ]]; then
	feh --bg-fill --no-xinerama ~/.dotfiles/wallpaper/wallpaper_8.jpg &
else
	feh --bg-max --randomize ~/.dotfiles/wallpaper/wallpaper_1.jpg &
fi
