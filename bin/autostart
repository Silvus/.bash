#!/usr/bin/env bash

function run {
	if ! pgrep $1;	then
		$@ &
	fi
}

run nm-applet
run guake -r tmux -e tmuxdev
run redshift-gtk
run dropbox start

run feh --bg-fill --randomize ~/.dotfiles/wallpaper/* --bg-fill --randomize ~/.dotfiles/wallpaper/* &

# Environment specific configuration
# ------------------------------------------------------
if [[ $(hostname --short) == "mars" ]]; then
	run firefox
	run thunderbird
fi
