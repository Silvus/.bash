#!/usr/bin/env python3


def main():
    while True:
        try:
            target_quantity = float(input("Target quantity (ml): "))
            flavor_percent = float(input("Flavor Percent: "))
        except ValueError:
            print("Need a number")
            continue

        if target_quantity > 0 and flavor_percent > 0:
            break
        else:
            print("Need a positive number")

    flavor_quantity = target_quantity * flavor_percent / 100
    base_quantity = target_quantity - flavor_quantity

    print('\n')
    if flavor_percent > 15:
        print("{0:.0f}% flavor? A bit spicy...".format(flavor_percent))
    if flavor_percent < 10:
        print("{0:.0f}% flavor? It will be light...".format(flavor_percent))

    print("{0} RECIPE {0}".format("-" * 30))
    print("Base quantity: {} ml".format(base_quantity))
    print("Flavor quantity: {} ml".format(flavor_quantity))


if __name__ == "__main__":
    main()
