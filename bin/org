#!/usr/bin/env bash

# If run under Tmux, set title
if [[ -n "$TMUX" ]]; then
	tmux rename-window "org"
fi

# Go to org folder
cd "${SILVUSDOC}"

# Update
git pull origin master

# Open
emacs -nw

# Autocommit
git add .
git commit -m "[org] Autocommit $(date +'%d/%m/%Y %T')"

# If run under Tmux, unset title
if [[ -n "$TMUX" ]]; then
	tmux set-window-option -q automatic-rename
fi


exit 0
