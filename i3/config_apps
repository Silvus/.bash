
# Config apps
# for_window [class="Conky"] floating enable
# for_window [class="Conky"] border none
for_window [class="Xfce4-notifyd"] floating enable
for_window [class="Xfce4-notifyd"] border none
for_window [class="Guake"] floating enable
for_window [class="Guake"] border none
for_window [class="Gcolor2"] floating enable
for_window [class="Lxappearance"] floating enable
for_window [class="Firefox"] border none
for_window [class="Google-chrome"] border none
for_window [class="Google-chrome-beta"] border none

# Assignments
for_window [title=".*\(Private Browsing\).*"] move to workspace "$WS9"
for_window [title=".*\(Navigation priv√©e\).*"] move to workspace "$WS9"
assign [class="Firefox"] 1:web
assign [class="Google-chrome"] 2:media
assign [class="Google-chrome-beta"] 2:media
assign [class="mplayer2"] 2:media
assign [class="mpv"] 2:media
assign [class="Gnome-mplayer"] 2:media

workspace $WS1 output HDMI-0
workspace $WS2 output VGA-0

# Startup
exec --no-startup-id nm-applet
exec --no-startup-id feh --bg-fill --no-xinerama ~/.dotfiles/wallpaper/wallpaper_8.jpg
exec guake -r tmux -e tmuxstart
exec firefox
exec thunderbird
