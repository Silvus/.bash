
# Main bar
bar {
    position top
    mode dock

    # The display is connected via HDM
    output HDMI-0

    # Font
    font pango:DejaVu Sans Mono, FontAwesome 7

    colors {
        # Whole color settings
        background #00141a
        statusline #00A5FF
        separator  #666666
        # Type             border  background font
        focused_workspace  #008fff #007fff #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #aa0000 #990000 #ffffff
    }

    # Using i3status
    # status_command i3status -c ~/.i3/i3status.conf

    # Using Conky
    # status_command ~/.i3/conky_launcher

	# Using i3pystatus
	status_command ~/.i3/i3pystatus/launcher.sh

}

# Small bar
bar {
	# i3bar position
    position top
    mode dock

    # show tray icons on the primary monitor
	tray_output primary
    # disable system tray
    tray_output none

    # The display is connected via VGA
    output VGA-0

	# Font
    font pango:DejaVu Sans Mono, FontAwesome 7

    colors {
        # Whole color settings
        background #00141a
        statusline #ffffff
        separator  #666666
        # Type             border  background font
        focused_workspace  #008fff #007fff #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #aa0000 #990000 #ffffff
    }
}
