
# Main bar
bar {
	# i3bar position
    position top
    # status_command i3status
    mode dock
    # The display is connected via HDM
    output HDMI-0

    # font DejaVu Sans
    # position top
    colors {
        # Whole color settings
        background #000000
        statusline #00A5FF
        separator  #666666
        # Type             border  background font
        focused_workspace  #008fff #007fff #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #aa0000 #990000 #ffffff
    }

    # Using custom i3status.conf
    status_command i3status -c ~/.i3/i3status.conf
}

# Small bar
bar {
	# i3bar position
    position top
    # status_command i3status
    mode dock
    # show tray icons on the primary monitor
	tray_output primary
    # disable system tray
    tray_output none
    # The display is connected via VGA
    output VGA-0

    # font DejaVu Sans
    # position top
    colors {
        # Whole color settings
        background #000000
        statusline #ffffff
        separator  #666666
        # Type             border  background font
        focused_workspace  #008fff #007fff #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #aa0000 #990000 #ffffff
    }
}
