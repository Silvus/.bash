" Base conf
if filereadable(expand("~/.vim/conf/vimrc_base"))
    source ~/.vim/conf/vimrc_base
endif

" Specific
" ------------------------------------------------------------------------------------
set nobackup
set nowritebackup
set noswapfile
set viminfo=
set noundofile
set noshelltemp
set history=0
set secure

hi StatusLine ctermbg=DarkBlue ctermfg=black
