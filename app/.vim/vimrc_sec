let g:load_plugins = 0

" Base conf
if filereadable(expand("~/.vimrc"))
    source ~/.vimrc
endif

" Specific
" ------------------------------------------------------------------------------------
set nobackup
set nowritebackup
set noswapfile
set viminfo=
set noundofile
set noshelltemp
set history=0
set secure

hi StatusLine ctermbg=DarkBlue ctermfg=black
