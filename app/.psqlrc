\set QUIET 1

-- Prompts
-- \set PROMPT1 '%M %n@%/%R%#%x '
-- \set PROMPT2 '%M %n@%/%R %# '

-- Bordure Style
\pset linestyle unicode
\pset border 2

-- Use table format (with headers across the top) by default, but switch to expanded table format when there's a lot of data
-- \x auto

-- Autocomplete keywords (like SELECT) in upper-case, even if you started typing them in lower case
\set COMP_KEYWORD_CASE upper

-- Show execution times
\timing

-- Limit paging
\pset pager off

-- Replace nulls
\pset null '[NULL]'

-- History
-- \set HISTFILE ~/.psql_history- :HOST - :DBNAME
\set HISTSIZE 5000

-- ignoredups + ignorespace
\set HISTCONTROL ignoreboth

-- Error reports
\set VERBOSITY verbose

\set QUIET 0
