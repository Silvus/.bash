# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

# http://i3wm.org/i3status/manpage.html

general {
	interval = 1
	output_format = "i3bar"
	colors = true
	color_bad = "#D64937"
	color_good = "#8bdd58"
	color_degraded = "#D69937"
	# color_separator = ""
	# separator = "  "
}

order += "battery 0"
order += "ethernet tun0"
order += "wireless wlan0"
order += "ethernet eth0"
order += "cpu_usage"
order += "load"
order += "disk /"
order += "disk /data"
order += "tztime date"
order += "tztime time"
order += "volume master"
order += "tztime blank" # Hack to show a seperator between time and tray icons

# Network
# -------------
ethernet eth0 {
	format_up = "   %ip "
	format_down = " ⚏  "
}
ethernet tun0 {
	format_up = "  🔒 %ip  "
	format_down = "  🔓  "
}
wireless wlan0 {
	format_up = "   %essid [%quality]  "
	format_down = ""
	# (%quality at %essid, %bitrate / %frequency) %ip
}

# Time
# -------------
tztime date {
	format = "    %a %d %b  "
}
tztime time {
	format = "    %H:%M:%S  "
}

# Monitoring
# -------------
cpu_usage {
	format = "    %usage  "
}
load {
	format = "    %1min  %5min  "
}
disk "/" {
	format = "    %percentage_used  "
}
disk "/data" {
	format = "    %percentage_used  "
}
battery 0 {
	format = "⚡ %status %percentage %remaining "
	format_down = ""
	# status_chr = "⚇ CHR""
	# status_bat = "⚡ BAT"
	# status_full = "☻ FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}

# Volume
# -------------
volume master {
	format = "    %volume  "
	format_muted = "       %volume  "
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

# Hack to show a seperator between time and tray icons
# -------------
tztime blank {
	format = ""
}
