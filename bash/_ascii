asciiart() {
	local OS=$(uname -s)
	local ARCH=$(uname -m)
	local KERNEL=$(uname -r)
	local DATE=$(date)
	local UPTIME=$(uptime)
	local HOST=$(hostname -s)

	echo -e '     .--.     ' "$HOST"
	echo -e '    |o_o |    ' "$OS" "$ARCH" "$KERNEL"
	echo -e '    |:_/ |    '
	echo -e '   //   \ \   '
	echo -e '  (|     | )  ' "Uptime $UPTIME"
	echo -e ' / \_   _/ \  '
	echo -e ' \___)=(___/  ' "$DATE"
}

asciiart
