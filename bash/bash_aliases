DOTFILES_PATH="$HOME/.dotfiles"

# Paths
# -----------------------------------------------------------------------------
if [ -d "$DOTFILES_PATH/bin" ] ; then
	export PATH=$HOME/.dotfiles/bin:$PATH
fi

# Import prompt
# Look like this : [07:25:41]-[silvus@lubuntu]-[~/.dotfiles]-[git master] $
# -----------------------------------------------------------------------------
if [ -f ~/.dotfiles/bash/bash_prompt ]; then
	source ~/.dotfiles/bash/bash_prompt
fi

# Import my aliases
# -----------------------------------------------------------------------------
if [ -f ~/.dotfiles/bash/bash_main ]; then
	source ~/.dotfiles/bash/bash_main
fi

# Import dev stuffs
# -----------------------------------------------------------------------------
if [ -f ~/.dotfiles/bash/bash_dev ]; then
	source ~/.dotfiles/bash/bash_dev
fi